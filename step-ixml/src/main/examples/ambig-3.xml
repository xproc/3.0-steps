<p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                xmlns:ex="http://example.com/"
                version="3.0">
<p:output port="result"/>

<p:ixml parameters="map{'ex:select':'all'}">
  <p:with-input port="grammar">
    <p:inline>
letters: X, (A; B; C) .
A: digits .
B: digits .
C: digits .
X: "a" .
digits: ["0"-"9"]+ .
    </p:inline>
  </p:with-input>
  <p:with-input port="source">
    <p:inline>a123</p:inline>
  </p:with-input>
</p:ixml>

</p:declare-step>
